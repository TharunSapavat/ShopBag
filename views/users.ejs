<%- include('./partials/header') %>

<div class="w-full min-h-screen flex bg-gray-50">
    <!-- Sidebar Navigation -->
    <div class="w-[25%] bg-white shadow-md p-6 min-h-screen">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">Admin Panel</h2>
            <p class="text-gray-600 text-sm">Manage your store</p>
        </div>
        
        <nav class="space-y-2">
            <a href="/owners/admin" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üìä</span>
                <span class="font-medium">Dashboard</span>
            </a>
            
            <a href="/owners/create-product" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">‚ûï</span>
                <span class="font-medium">Create Product</span>
            </a>
            
            <a href="/owners/products" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üõçÔ∏è</span>
                <span class="font-medium">All Products</span>
            </a>
            
            <a href="/owners/users" class="flex items-center w-full p-3 text-left bg-blue-50 text-blue-600 rounded-lg">
                <span class="mr-2">üë•</span>
                <span class="font-medium">Manage Users</span>
            </a>
            
            <a href="/shop" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üè™</span>
                <span class="font-medium">View Shop</span>
            </a>
            
            <a href="/users/logout" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-red-600 rounded-lg mt-4 border-t pt-4">
                <span class="mr-2">üö™</span>
                <span class="font-medium">Logout</span>
            </a>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="w-[75%] p-8">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
            <div id="flash-success" class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                <%= messages.success %>
            </div>
            <script>
                setTimeout(function() {
                    var el = document.getElementById('flash-success');
                    if (el) el.style.display = 'none';
                }, 3000);
            </script>
        <% } %>
        <% if (typeof messages !== 'undefined' && messages.error && messages.error.length > 0) { %>
            <div id="flash-error" class="mb-6 p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
                <%= messages.error %>
            </div>
            <script>
                setTimeout(function() {
                    var el = document.getElementById('flash-error');
                    if (el) el.style.display = 'none';
                }, 3000);
            </script>
        <% } %>

        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">User Management</h1>
            <p class="text-gray-600">View and manage all registered users</p>
            <div class="mt-4 p-4 bg-yellow-50 border-l-4 border-yellow-500 text-yellow-800 rounded">
                <p class="text-sm">
                    <strong>Role Hierarchy:</strong> 
                    <strong class="text-purple-700">Admin</strong> (Full access - manage users & products) ‚Üí 
                    <strong class="text-blue-700">Co-Admin</strong> (Limited access - manage products only) ‚Üí 
                    <strong class="text-green-700">User</strong> (Can shop only)
                </p>
                <p class="text-sm mt-2">
                    <strong>Note:</strong> Admins and Co-Admins cannot shop. They manage the store, not purchase from it.
                </p>
            </div>
        </div>

        <!-- Users Table -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="text-left p-4 font-semibold text-gray-700">Name</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Email</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Role</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Cart Items</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (users && users.length > 0) { %>
                        <% users.forEach(function(user) { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="p-4">
                                    <div class="font-medium text-gray-800"><%= user.fullname %></div>
                                </td>
                                <td class="p-4 text-gray-600"><%= user.email %></td>
                                <td class="p-4">
                                    <% if (user.role === 'admin') { %>
                                        <span class="bg-purple-100 text-purple-700 px-3 py-1 rounded-full text-sm font-medium">
                                            Full Admin
                                        </span>
                                    <% } else if (user.role === 'co-admin') { %>
                                        <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-sm font-medium">
                                            Co-Admin
                                        </span>
                                    <% } else { %>
                                        <span class="bg-green-100 text-green-700 px-3 py-1 rounded-full text-sm font-medium">
                                            User
                                        </span>
                                    <% } %>
                                </td>
                                <td class="p-4 text-gray-600"><%= user.cart.length %> items</td>
                                <td class="p-4">
                                    <% if (user._id.toString() === currentUser._id.toString()) { %>
                                        <!-- Current admin user - can't modify themselves -->
                                        <span class="text-gray-500 italic text-sm">You (Current Admin)</span>
                                    <% } else { %>
                                        <div class="flex gap-2">
                                            <% if (user.role === 'user') { %>
                                                <form action="/owners/make-coadmin/<%= user._id %>" method="POST" class="inline">
                                                    <button type="submit" 
                                                            class="bg-blue-500 text-white px-3 py-1 rounded text-sm hover:bg-blue-600">
                                                        Make Co-Admin
                                                    </button>
                                                </form>
                                                <form action="/owners/make-admin/<%= user._id %>" method="POST" class="inline">
                                                    <button type="submit" 
                                                            class="bg-purple-500 text-white px-3 py-1 rounded text-sm hover:bg-purple-600">
                                                        Make Admin
                                                    </button>
                                                </form>
                                            <% } else { %>
                                                <form action="/owners/remove-admin/<%= user._id %>" method="POST" class="inline">
                                                    <button type="submit" 
                                                            class="bg-gray-500 text-white px-3 py-1 rounded text-sm hover:bg-gray-600">
                                                        Demote to User
                                                    </button>
                                                </form>
                                            <% } %>
                                            <form action="/owners/delete-user/<%= user._id %>" method="POST" class="inline">
                                                <button type="submit" 
                                                        onclick="return confirm('Are you sure you want to delete this user?')"
                                                        class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600">
                                                    Delete
                                                </button>
                                            </form>
                                        </div>
                                    <% } %>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="p-8 text-center text-gray-500">
                                <div class="text-4xl mb-4">üë•</div>
                                <p class="text-lg mb-2">No users found</p>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- User Stats -->
        <div class="mt-6 grid grid-cols-4 gap-4">
            <div class="bg-white p-4 rounded-lg shadow-sm">
                <div class="text-gray-600 text-sm">Total Users</div>
                <div class="text-2xl font-bold text-gray-800"><%= users.length %></div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm">
                <div class="text-gray-600 text-sm">Full Admins</div>
                <div class="text-2xl font-bold text-purple-600">
                    <%= users.filter(u => u.role === 'admin').length %>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm">
                <div class="text-gray-600 text-sm">Co-Admins</div>
                <div class="text-2xl font-bold text-blue-600">
                    <%= users.filter(u => u.role === 'co-admin').length %>
                </div>
            </div>
            <div class="bg-white p-4 rounded-lg shadow-sm">
                <div class="text-gray-600 text-sm">Regular Users</div>
                <div class="text-2xl font-bold text-green-600">
                    <%= users.filter(u => u.role === 'user').length %>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
