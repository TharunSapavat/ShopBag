<%- include('./partials/header') %>

<% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
    <div id="flash-success" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-green-500 z-50">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= messages.success %>
        </span>
    </div>
    <script>
        setTimeout(function() {
            var el = document.getElementById('flash-success');
            if (el) el.style.display = 'none';
        }, 3000);
    </script>
<% } %>

<div class="w-full min-h-screen flex bg-gray-50">
    <!-- Sidebar Navigation -->
    <div class="w-[25%] bg-white shadow-md p-6 min-h-screen">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">
                <% if (currentUser.role === 'admin') { %>
                    Admin Panel
                <% } else { %>
                    Co-Admin Panel
                <% } %>
            </h2>
            <p class="text-gray-600 text-sm">Manage your store</p>
        </div>
        
        <nav class="space-y-2">
            <a href="/owners/admin" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üìä</span>
                <span class="font-medium">Dashboard</span>
            </a>
            
            <a href="/owners/create-product" class="flex items-center w-full p-3 text-left bg-blue-50 text-blue-600 rounded-lg">
                <span class="mr-2">‚ûï</span>
                <span class="font-medium">Create Product</span>
            </a>
            
            <a href="/owners/products" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üõçÔ∏è</span>
                <span class="font-medium">All Products</span>
            </a>
            
            <% if (currentUser.role === 'admin') { %>
            <a href="/owners/users" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üë•</span>
                <span class="font-medium">Manage Users</span>
            </a>
            <% } %>
            
            <a href="/users/logout" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-red-600 rounded-lg mt-4 border-t pt-4">
                <span class="mr-2">üö™</span>
                <span class="font-medium">Logout</span>
            </a>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="w-[75%] p-8">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Create New Product</h1>
            <p class="text-gray-600">Add a new product to your inventory</p>
        </div>

        <!-- Product Form -->
        <div class="bg-white rounded-lg shadow-md p-8">
            <h2 class="text-xl font-bold mb-6 text-gray-800">Product Information</h2>
            <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data">
                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-3 text-gray-700">Product Details</h3>
                    <div class="mb-4">
                        <label class="block mb-2 font-medium text-gray-700">Product Image</label>
                        <input name="image" type="file" class="w-full py-2 px-4 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <div class="grid grid-cols-2 gap-4">
                        <input name="name" type="text" placeholder="Product Name"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <input name="price" type="text" placeholder="Product Price"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <input name="discount" type="text" placeholder="Discount (%)"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent col-span-2">
                    </div>
                </div>

                <div class="mb-6">
                    <h3 class="text-lg font-semibold mb-3 text-gray-700">Design Customization</h3>
                    <div class="grid grid-cols-3 gap-4">
                        <input name="bgcolor" type="text" placeholder="Background Color"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <input name="panelcolor" type="text" placeholder="Panel Color"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <input name="textcolor" type="text" placeholder="Text Color"
                            class="border border-gray-300 p-3 rounded-lg w-full focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                </div>
                
                <button type="submit" class="w-full bg-blue-500 text-white px-6 py-3 rounded-lg hover:bg-blue-600 font-semibold transition duration-200">
                    Create New Product
                </button>
            </form>
        </div>
    </div>
</div>
<%- include('./partials/footer') %>