<%- include('./partials/header') %>

<div class="min-h-screen bg-gray-100 py-8">
  <div class="max-w-2xl mx-auto bg-white rounded-lg shadow-md p-8">
    <h1 class="text-3xl font-semibold text-center mb-8">My Account</h1>

    <!-- âœ… Flash Messages -->
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="mb-4 p-3 rounded bg-red-500 text-white"><%= messages.error %></div>
    <% } %>
    <% if (messages.success && messages.success.length > 0) { %>
      <div class="mb-4 p-3 rounded bg-green-500 text-white"><%= messages.success %></div>
    <% } %>

    <div class="space-y-6">
      <!-- User Info Section -->
      <div class="bg-gray-50 p-6 rounded-lg">
        <h2 class="text-xl font-semibold mb-4">Profile Information</h2>
        <div class="space-y-4">
          <div class="flex items-center">
            <span class="w-32 text-gray-600">Full Name:</span>
            <span class="font-medium"><%= user.fullname %></span>
          </div>
          <div class="flex items-center">
            <span class="w-32 text-gray-600">Email:</span>
            <span class="font-medium"><%= user.email %></span>
          </div>
          <div class="flex items-center">
            <span class="w-32 text-gray-600">Address:</span>
            <span class="font-medium">
              <%= user.address && user.address.street ? `${user.address.street}, ${user.address.city}, ${user.address.state} - ${user.address.pincode}` : "Not provided" %>
            </span>
          </div>
        </div>
      </div>
<!-- Update Address Section -->
      <div class="bg-gray-50 p-6 rounded-lg">
        <h2 class="text-xl font-semibold mb-4">Update Address</h2>
        <form action="/profile/update-address" method="POST" class="space-y-4">
          <div>
            <label class="block text-gray-600 mb-2" for="street">Street</label>
            <input type="text" id="street" name="street" value="<%= user.address?.street || '' %>"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <div>
            <label class="block text-gray-600 mb-2" for="city">City</label>
            <input type="text" id="city" name="city" value="<%= user.address?.city || '' %>"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <div>
            <label class="block text-gray-600 mb-2" for="state">State</label>
            <input type="text" id="state" name="state" value="<%= user.address?.state || '' %>"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <div>
            <label class="block text-gray-600 mb-2" for="pincode">Pincode</label>
            <input type="text" id="pincode" name="pincode" value="<%= user.address?.pincode || '' %>"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <button type="submit"
                  class="w-full bg-green-500 text-white py-2 px-4 rounded-md hover:bg-green-600 focus:outline-none focus:ring-2 focus:ring-green-500">
            Update Address
          </button>
        </form>
      </div>
      <!-- Change Password Section -->
      <div class="bg-gray-50 p-6 rounded-lg">
        <h2 class="text-xl font-semibold mb-4">Change Password</h2>
        <form action="/profile/change-password" method="POST" class="space-y-4">
          <div>
            <label class="block text-gray-600 mb-2" for="currentPassword">Current Password</label>
            <input type="password" id="currentPassword" name="currentPassword"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <div>
            <label class="block text-gray-600 mb-2" for="newPassword">New Password</label>
            <input type="password" id="newPassword" name="newPassword"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <div>
            <label class="block text-gray-600 mb-2" for="confirmPassword">Confirm New Password</label>
            <input type="password" id="confirmPassword" name="confirmPassword"
                   class="w-full px-4 py-2 border rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500" required>
          </div>
          <button type="submit"
                  class="w-full bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
            Update Password
          </button>
        </form>
      </div>

      
    </div>
  </div>
</div>

<%- include('./partials/footer') %>
