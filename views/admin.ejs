<%- include('./partials/header') %>

<div class="w-full min-h-screen flex bg-gray-50">
    <!-- Sidebar Navigation -->
    <div class="w-[25%] bg-white shadow-md p-6 min-h-screen">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">
                <% if (currentUser.role === 'admin') { %>
                    Admin Panel
                <% } else { %>
                    Co-Admin Panel
                <% } %>
            </h2>
            <p class="text-gray-600 text-sm">Manage your store</p>
        </div>
        
        <nav class="space-y-2">
            <a href="/owners/admin" class="flex items-center w-full p-3 text-left bg-blue-50 text-blue-600 rounded-lg">
                <span class="mr-2">üìä</span>
                <span class="font-medium">Dashboard</span>
            </a>
            
            <a href="/owners/create-product" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">‚ûï</span>
                <span class="font-medium">Create Product</span>
            </a>
            
            <a href="/owners/products" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üõçÔ∏è</span>
                <span class="font-medium">All Products</span>
            </a>
            
            <% if (currentUser.role === 'admin') { %>
            <a href="/owners/users" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üë•</span>
                <span class="font-medium">Manage Users</span>
            </a>
            <% } %>
            
            <a href="/users/logout" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-red-600 rounded-lg mt-4 border-t pt-4">
                <span class="mr-2">üö™</span>
                <span class="font-medium">Logout</span>
            </a>
        </nav>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="w-[75%] p-8">
        <!-- Flash Messages -->
        <% if (success && success.length > 0) { %>
            <div id="flash-success" class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                <%= success %>
            </div>
            <script>
                setTimeout(function() {
                    var el = document.getElementById('flash-success');
                    if (el) el.style.display = 'none';
                }, 3000);
            </script>
        <% } %>

        <!-- Dashboard Analytics Overview -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2">Dashboard Overview</h1>
            <p class="text-gray-600">Welcome to your store dashboard!</p>
            
            <% if (currentUser.role === 'admin') { %>
            <div class="mt-4 p-4 bg-purple-50 border-l-4 border-purple-500 text-purple-700 rounded">
                <p class="text-sm">
                    <strong>Full Admin Mode:</strong> You can manage products and users. 
                    You cannot shop - this keeps the admin role separate from customer activities.
                </p>
            </div>
            <% } else { %>
            <div class="mt-4 p-4 bg-blue-50 border-l-4 border-blue-500 text-blue-700 rounded">
                <p class="text-sm">
                    <strong>Co-Admin Mode:</strong> You can add and delete products. 
                    User management is restricted to full admins only.
                </p>
            </div>
            <% } %>
        </div>

        <!-- Analytics Cards -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Total Products Card -->
            <div class="bg-white p-6 rounded-lg border-l-4 border-blue-500 shadow-sm">
                <h3 class="text-gray-500 text-sm font-medium">Total Products</h3>
                <p class="text-3xl font-bold text-gray-800"><%= totalProducts %></p>
            </div>

            <!-- Total Orders Card -->
            <div class="bg-white p-6 rounded-lg border-l-4 border-green-500 shadow-sm">
                <h3 class="text-gray-500 text-sm font-medium">Total Orders</h3>
                <p class="text-3xl font-bold text-gray-800"><%= totalOrders %></p>
            </div>

            <!-- Total Users Card -->
            <div class="bg-white p-6 rounded-lg border-l-4 border-yellow-500 shadow-sm">
                <h3 class="text-gray-500 text-sm font-medium">Total Users</h3>
                <p class="text-3xl font-bold text-gray-800"><%= totalUsers %></p>
            </div>

            <!-- Revenue Card -->
            <div class="bg-white p-6 rounded-lg border-l-4 border-purple-500 shadow-sm">
                <h3 class="text-gray-500 text-sm font-medium">Total Revenue</h3>
                <p class="text-3xl font-bold text-gray-800">‚Çπ<%= totalRevenue %></p>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="bg-white p-6 rounded-lg shadow-sm">
            <h3 class="text-lg font-semibold text-gray-800 mb-4">Quick Actions</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <a href="/owners/create-product" class="p-4 bg-blue-50 hover:bg-blue-100 text-blue-700 rounded-lg flex items-center">
                    <span class="mr-2">‚ûï</span>
                    <span>Add New Product</span>
                </a>
                <a href="/owners/products" class="p-4 bg-green-50 hover:bg-green-100 text-green-700 rounded-lg flex items-center">
                    <span class="mr-2">üìã</span>
                    <span>View All Products</span>
                </a>
            </div>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>