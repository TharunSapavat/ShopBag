<%- include('./partials/header') %>

<div class="w-full min-h-screen flex bg-gray-50">
    <!-- Sidebar Navigation -->
    <div class="w-[25%] bg-white shadow-md p-6 min-h-screen">
        <div class="mb-8">
            <h2 class="text-2xl font-bold text-gray-800 mb-2">
                <% if (currentUser.role === 'admin') { %>
                    Admin Panel
                <% } else { %>
                    Co-Admin Panel
                <% } %>
            </h2>
            <p class="text-gray-600 text-sm">Manage your store</p>
        </div>
        
        <nav class="space-y-2">
            <a href="/owners/admin" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üìä</span>
                <span class="font-medium">Dashboard</span>
            </a>
            
            <a href="/owners/create-product" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">‚ûï</span>
                <span class="font-medium">Create Product</span>
            </a>
            
            <a href="/owners/products" class="flex items-center w-full p-3 text-left bg-blue-50 text-blue-600 rounded-lg">
                <span class="mr-2">üõçÔ∏è</span>
                <span class="font-medium">All Products</span>
            </a>
            
            <% if (currentUser.role === 'admin') { %>
            <a href="/owners/users" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-gray-700 rounded-lg">
                <span class="mr-2">üë•</span>
                <span class="font-medium">Manage Users</span>
            </a>
            <% } %>
            
            <a href="/users/logout" class="flex items-center w-full p-3 text-left hover:bg-gray-100 text-red-600 rounded-lg mt-4 border-t pt-4">
                <span class="mr-2">üö™</span>
                <span class="font-medium">Logout</span>
            </a>
        </nav>
    </div>

    <!-- Main Content Area -->
    <div class="w-[75%] p-8">
        <!-- Flash Messages -->
        <% if (typeof messages !== 'undefined' && messages.success && messages.success.length > 0) { %>
            <div id="flash-success" class="mb-6 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
                <%= messages.success %>
            </div>
            <script>
                setTimeout(function() {
                    var el = document.getElementById('flash-success');
                    if (el) el.style.display = 'none';
                }, 3000);
            </script>
        <% } %>

        <!-- Header -->
        <div class="mb-8 flex justify-between items-center">
            <div>
                <h1 class="text-3xl font-bold text-gray-800 mb-2">All Products</h1>
                <p class="text-gray-600">Manage your product inventory</p>
            </div>
            <a href="/owners/create-product" class="bg-blue-500 text-white px-6 py-2 rounded-lg hover:bg-blue-600">
                ‚ûï Add New Product
            </a>
        </div>

        <!-- Products Table -->
        <div class="bg-white rounded-lg shadow-sm overflow-hidden">
            <table class="w-full">
                <thead class="bg-gray-50 border-b">
                    <tr>
                        <th class="text-left p-4 font-semibold text-gray-700">Image</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Name</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Price</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Discount</th>
                        <th class="text-left p-4 font-semibold text-gray-700">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (products && products.length > 0) { %>
                        <% products.forEach(function(product) { %>
                            <tr class="border-b hover:bg-gray-50">
                                <td class="p-4">
                                    <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                                         alt="<%= product.name %>" 
                                         class="w-16 h-16 object-cover rounded">
                                </td>
                                <td class="p-4">
                                    <div class="font-medium text-gray-800"><%= product.name %></div>
                                </td>
                                <td class="p-4 text-gray-600">‚Çπ<%= product.price %></td>
                                <td class="p-4 text-green-600">‚Çπ<%= product.discount || 0 %></td>
                                <td class="p-4">
                                    <div class="flex gap-2">
                                        <a href="/owners/edit-product/<%= product._id %>" 
                                           class="bg-blue-500 text-white px-3 py-1 rounded text-sm hover:bg-blue-600">
                                            Edit
                                        </a>
                                        <form action="/owners/delete-product/<%= product._id %>" method="POST" class="inline">
                                            <button type="submit" 
                                                    onclick="return confirm('Are you sure you want to delete this product?')"
                                                    class="bg-red-500 text-white px-3 py-1 rounded text-sm hover:bg-red-600">
                                                Delete
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        <% }); %>
                    <% } else { %>
                        <tr>
                            <td colspan="5" class="p-8 text-center text-gray-500">
                                <div class="text-4xl mb-4">üì¶</div>
                                <p class="text-lg mb-2">No products found</p>
                                <a href="/owners/create-product" class="text-blue-500 hover:underline">Create your first product</a>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>

        <!-- Product Count -->
        <div class="mt-4 text-gray-600">
            Total Products: <span class="font-semibold"><%= products.length %></span>
        </div>
    </div>
</div>

<%- include('./partials/footer') %>
