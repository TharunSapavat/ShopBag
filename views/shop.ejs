<%- include('./partials/header') %>
<% if (success && success.length > 0) { %>
    <div id="flash-success" class="absolute top-5 left-1/2 -translate-x-1/2 -translate-y-1/2 p-3 rounded-md bg-blue-500">
        <span class="inline-block mt-1 mb-1 text-white">
            <%= success %>
        </span>
    </div>
    <script>
        setTimeout(function() {
            var el = document.getElementById('flash-success');
            if (el) el.style.display = 'none';
        }, 1000);
    </script>
<% } %>

 
<div class="w-full min-h-screen flex items-start px-20 py-20 bg-gray-50">
    <!-- Sidebar -->
    <aside class="w-1/8 flex flex-col items-start pr-8 ml-2 mt-8 self-start">
        <div class="flex items-center gap-2 mb-8">
            <h3 class="font-semibold">Sort by :</h3>
             
        </div>
        <div class="flex flex-col mb-16">
            <a class="block w-fit mb-2 text-gray-600 hover:underline" href="#">All Products</a>
            <a class="block w-fit mb-2 text-gray-600 hover:underline" href="#">Discounted Products</a>
            <a class="block w-fit mb-2 text-gray-600 hover:underline" href="#">New Collection</a>
        </div>
        <div class="mt-auto">
            <a class="block w-fit mb-2 font-semibold" href="#">Filter by :</a>
            <a class="block w-fit mb-2 text-gray-600 hover:underline" href="#">Availability</a>
            <a class="block w-fit mb-2 text-gray-600 hover:underline" href="#">Discount</a>
        </div>
    </aside>
    <!-- Vertical Divider -->
    <div class="w-px bg-gray-300 h-[80vh] mx-8"></div>
    <!-- Product Grid -->
    <main class="w-3/4 flex flex-col gap-5">
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8 overflow-y-auto">
            <% if (!products || products.length === 0) { %>
                <div class="col-span-full text-center text-gray-500">No products found.</div>
            <% } %>
            <% products.forEach(function(product){ 
                if (!product) return; // skip if product is null/undefined
            %>
                <div class="w-full bg-white rounded-lg shadow hover:shadow-lg transition">
                    <div class="w-full h-52 flex items-center justify-center rounded-t-lg" 
                         style="background: <%= product.bgcolor || '#f3f4f6' %>;">
                        <% if (product.image) { %>
                            <img class="h-44 object-contain"
                                 src="data:image/jpeg;base64,<%= product.image.toString('base64') %>"
                                 alt="">
                        <% } else { %>
                            <div class="h-44 w-44 flex items-center justify-center bg-gray-200 text-gray-400 text-sm rounded">
                                No Image
                            </div>
                        <% } %>
                    </div>
                    <div class="flex justify-between items-center px-4 py-4 rounded-b-lg"
                         style="background:<%= product.panelcolor || '#fff' %>; color:<%= product.textcolor || '#222' %>;">
                        <div>
                            <h3 class="font-semibold text-lg"><%= product.name || 'No Name' %></h3>
                            <h4 class="text-base">â‚¹ <%= typeof product.price === 'number' ? product.price : 0 %></h4>
                        </div>
                        <a class="w-8 h-8 flex items-center justify-center rounded-full bg-white shadow hover:bg-gray-100" href="/addtocart/<%=product._id%>">
                            <i class="ri-add-line"></i>
                        </a>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</div>
<%- include('./partials/footer') %>